<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.divisions.KhulnaDistrict">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Khulna Division"
                android:textSize="25dp"
                android:textColor="#0b0b0b"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/BagerhatDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Bagerhat"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/ChuadangaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Chuadanga"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/JessoreDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Jessore"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/JhenaidahDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Jhenaidah"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/KhulnaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "Khulna"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/KushtiaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Kushtia"
            android:textSize="20dp"

            />

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/MaguraDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Magura"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/MeherpurDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Meherpur"
            android:textSize="20dp"
            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/NarailDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Narail"
            android:textSize="20dp"
            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/SatkhiraDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Satkhira"
            android:textSize="20dp"
            />


    </LinearLayout>


</ScrollView>
