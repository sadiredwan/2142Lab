<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.RangpurDistrict">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Rangpur Division"
                android:textSize="25dp"
                android:textColor="#0b0b0b"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/ThakurgaonDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Thakurgaon"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/RangpurDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Rangpur"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PanchagarhDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Panchagarh"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/NilphamariDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Nilphamari"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/LalmonirhatDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "Lalmonirhat"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/KurigramDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Kurigram"
            android:textSize="20dp"

            />

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/GaibandhaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Gaibandha"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/DinajpurDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Dinajpur"
            android:textSize="20dp"
            />


    </LinearLayout>


</ScrollView>