<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.BarisalDistrict">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Barisal Division"
                android:textSize="25dp"
                android:textColor="#0b0b0b"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/BargunaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Barguna"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/BarisalDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Barisal"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/BholaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Bhola"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/JhalokatiDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Jhalokati"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PatuakhaliDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "Patuakhali"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PirojpurDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Pirojpur"
            android:textSize="20dp"

            />


    </LinearLayout>


</ScrollView>
