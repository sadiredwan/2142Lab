<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.RajshahiDistrict">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Rajshai Division"
                android:textSize="25dp"
                android:textColor="#0b0b0b"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/BograDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Bogra"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/ChapaiDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Chapai Nawabgang"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/JoypurhatDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Joypurhat"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/NaogaonDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Naogaon"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/NatorDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "Natore"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PabnaDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Pabna"
            android:textSize="20dp"

            />

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/RajshahiDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Rajshahi"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/SirajgangDistrictId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Sirajgang"
            android:textSize="20dp"
            />


    </LinearLayout>


</ScrollView>
