<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.DivisionList">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Divisions"
                android:textColor="#0e0e0e"
                android:textSize="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>



        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/RajshahiDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Rajshahi"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/DhakaDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Dhaka"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/ChittagongDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Chittagong"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/RangpurDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Rangpur"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/KhulnaDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "Khulna"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/BarisalDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Barisal"
            android:textSize="20dp"

            />

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/SylhetDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Sylhet"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/MymensinghDivisionId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Mymensingh"
            android:textSize="20dp"
            />

    </LinearLayout>


</ScrollView>
