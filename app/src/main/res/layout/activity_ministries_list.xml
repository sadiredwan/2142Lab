<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nano.projectjonobak.divisions.DhakaDistrict">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="List of Ministries"
                android:textSize="25dp"
                android:textColor="#0b0b0b"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/AgricultureMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Agriculture"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/CommerceMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Commerce"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/CivilAviationandourismMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Civil Aviation and Tourism"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/EducationMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Education"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/EnvironmentandForestMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Environment and Forest"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/FinanceMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Finance"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/FisheriesandLivestockMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Fisheries and Livestock"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/HealthandFamilyWelfareMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Health and Family Welfare"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/IndustriesMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Industries"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/LiberationWarAffairsMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Liberation War Affairs"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PublicAdministrationMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Public Administration"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/PowerEnergyandMineralResourcesMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Power, Energy and Mineral Resources"
            android:textSize="16dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/RailwaysMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Railways"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/TextilesandJuteMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Textiles and Jute"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/WomenandChildrenAffairsMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Women and Children Affairs"
            android:textSize="20dp"

            />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/YouthandSportsMinistryId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Youth and Sports"
            android:textSize="20dp"

            />



    </LinearLayout>


</ScrollView>